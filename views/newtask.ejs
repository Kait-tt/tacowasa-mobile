<!doctype html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=0.75">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Create</title>
  <link rel="stylesheet" href="newtask.css">
</head>
<body>

<div class="container-fluid">
  <h1>Create Task</h1>

  <form class="form">
    <div class="form-group">
      <label for="title" class="control-label">タイトル</label>
      <input type="text" class="form-control" id="title" placeholder="Title" required>
    </div>

    <div class="form-group">
      <label for="description" class="control-label">説明</label>
      <input type="text" class="form-control" id="description" placeholder="Description" required>
    </div>

    <div class="form-group">
      <label for="stage" class="control-label">ステージ</label>
      <select id="stage" class="selectpicker"></select>
    </div>

    <div class="form-group">
      <label for="cost" class="control-label">コスト</label>
      <select id="cost" class="selectpicker"></select>
    </div>

    <div class="form-group">
      <label for="labellist" class="control-label">ラベル</label>
      <select multiple id="labellist" class="selectpicker"></select>
    </div>

    <button type="button" id="create-task" class="btn btn-success">Create Task</button>
  </form>
</div>

<script src="common.js"></script>
<script src ="newtask.js"></script>

</body>
</html>
